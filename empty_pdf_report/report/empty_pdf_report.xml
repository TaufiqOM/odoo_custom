<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Report Action -->
        <report
            id="action_empty_pdf_report"
            string="Empty PDF Report"
            model="empty.pdf.model"
            report_type="qweb-pdf"
            name="empty_pdf_report.empty_pdf_report_template"
            file="empty_pdf_report.empty_pdf_report_template"
            menu="False"
        />
        
        <!-- Report Template -->
        <template id="empty_pdf_report_template">
            <t t-call="web.basic_layout">
                <div class="page">
                    <h1 style="text-align: center; margin-top: 50px;">Empty PDF Report</h1>
                    <p style="text-align: center; margin-top: 100px;">This is an empty PDF report generated by the custom module.</p>
                    <p style="text-align: center;">Generated on: <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M:%S')"/></p>
                </div>
            </t>
        </template>
    </data>
</odoo>
